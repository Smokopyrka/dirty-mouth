<idea-plugin>
    <id>dirty.mouth.dirty_mouth</id>
    <name>Dirty Mouth</name>

    <description><![CDATA[
    <h1>Curse word detection plugin</h1>
    <p>A plugin that allows you to search for curse words in the currently focues file</p>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action
            id="FindCurseWordsAction"
            class="FindCurseWordsAction"
            text="Find curse words"
            description="Find all curse words present in the focused file">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>